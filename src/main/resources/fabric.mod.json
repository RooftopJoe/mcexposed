  "authors": [
    "Rooftop Joe"
  ],
  "contact": {
    "homepage": "https://www.youtube.com/channel/UC4_PveAm8gCbG13BuKW6Mcg",
    "sources": "https://github.com/RooftopJoe/mcexposed"
  },

  "license": "LGPL-3.0-or-later",
  "icon": "assets/mcexposed/icon.png",

